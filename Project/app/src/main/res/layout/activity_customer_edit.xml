<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".Worker">

    <ImageButton
        android:id="@+id/btnCancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/non_border"
        android:contentDescription="@string/login_cancelBtn"
        android:translationX="140dp"
        android:translationY="20dp"
        app:srcCompat="@drawable/baseline_cancel_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Profile"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="36dp"
                android:textStyle="bold"
                android:translationY="-10dp" />

            <ImageView
                android:id="@+id/userImage"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="192dp"
                android:textAlignment="center"
                android:translationY="-10dp"
                app:srcCompat="@drawable/propic2"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="74dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="20dp"
                android:text="Name"
                android:textColor="@color/lavender"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/cusEtName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_person_24"
                android:hint="Enter Your name"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:paddingLeft="20dp"
                android:text="Email"
                android:textColor="@color/lavender"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/cusEtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:hint="Enter Your Email"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:paddingLeft="20dp"
                android:text="Age"
                android:textColor="@color/lavender"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/cusEtAge"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:hint="Enter Your Age"
                android:padding="13dp"
                android:textColor="@color/black"
                android:translationY="-10.5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:paddingLeft="20dp"
                android:text="Number"
                android:textColor="@color/lavender"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/cusEtNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_call_24"
                android:hint="Enter Your Number"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="162dp"
                android:layout_height="50dp"
                android:layout_marginTop="-8dp"
                android:text="update"
                android:textSize="18sp"
                android:translationX="77dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>